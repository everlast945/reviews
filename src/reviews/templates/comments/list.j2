{% extends "base.j2" %}

{% block content %}
    <div class="row">
    <div class="col-md-12">
        <a href="/regions/comments/create/" class="btn btn-primary float-right">Добавить комментарий</a>
    </div>
    </div>
    <table class="table" >
        <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Регион</th>
            <th>Город</th>
            <th>Телефон</th>
            <th>Почта</th>
            <th>Комментарий</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{comment.2 }}</td>
                <td>{{comment.1 }}</td>
                <td>{{comment.3 }}</td>
                <td>{{comment.10 }}</td>
                <td>{{comment.12 }}</td>
                <td>{{comment.4 }}</td>
                <td>{{comment.5 }}</td>
                <td class="min-width">{{comment.6 }}</td>
                <td>
                    <button type="button" class="btn text-danger js-comment-delete" data-url="/regions/comments/{{ comment.0 }}/">
                        delete
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
